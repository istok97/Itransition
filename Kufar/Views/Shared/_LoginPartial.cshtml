
@{
    ViewData["Title"] = "_LoginPartial";
}

@using Microsoft.AspNetCore.Identity
@using Kufar.Models
@if (Context.User.Identity.IsAuthenticated)
    {
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">

            <ul class="nav navbar-nav navbar-right">
                <li>
                    <p class="navbar-text">Hello, <b>@Context.User.Identity.Name</b></p>
                </li>
                <li>
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
                </li>
            </ul>
        </form>

    }
    else
    {
        <ul class="nav navbar-nav navbar-right">

            <a asp-area="" asp-controller="Account" asp-action="Register" class="navbar-brand">Registration</a>
            <a asp-area="" asp-controller="Account" asp-action="Login" class="navbar-brand">Login</a>
        </ul>
    }

